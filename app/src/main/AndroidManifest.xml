<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.nosleepreader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.projects.nosleepreader.analytics.AnalyticsApplication">

        <activity
            android:name="com.projects.nosleepreader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.projects.nosleepreader.ReaderActivity"
            android:label="@string/title_activity_reader" >
            <intent-filter android:label="Nosleep Reader" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.reddit.com"
                    android:pathPrefix="/r/nosleep/comments"
                    android:scheme="http" />
                <data
                    android:host="www.reddit.com"
                    android:pathPrefix="/r/nosleep/comments"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.projects.nosleepreader.PreferenceActivity"
            android:label="@string/title_activity_preference" >
        </activity>
    </application>

</manifest>
